---
  const whatsappNumber = '5491178865748'; 
  const whatsappMessage = 'Hola, me gustaría obtener más información sobre tus proyectos.'; 
  const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;
---
<footer class="w-full m-auto bg-black border-t border-orange-500 border-opacity-40 lg:w-3/4">
  <section class="flex justify-center flex-col lg:grid lg:grid-cols-2 items-center lg:py-16">
    <div class="flex justify-center text-center content-center flex-wrap my-4 mx-auto gap-2 items-center lg:row-span-3 lg:px-8">
        <span class="text-xs uppercase tracking-wide text-gray-500">
          Llamadas al:
        </span>
        <span class="block text-2xl font-medium text-gray-600 hover:opacity-75 sm:text-3xl">
          01121617937
        </span>
    </div>
      <ul class="w-full my-12 mx-auto flex justify-center items-center self-center lg:justify-start">
        <li class="w-1/6 items-center mx-auto">
          <a href={whatsappUrl} class="transition hover:opacity-75">
            <img class="w-8 h-8" src="/whatsapp-icon.svg" alt="WhatsApp icon" />
          </a>
        </li>
        <li class="w-1/6 items-center mx-auto">
          <a href="https://www.linkedin.com/in/mayra-cortinez-/" class="transition hover:opacity-75">
            <img class="w-8 h-8" src="/linkedin-icon.svg" alt="linkedin icon" />
          </a>
        </li>
        <li class="w-1/6 items-center mx-auto">
          <a href="https://github.com/MayraCortinez" class="text-orange-500 transition hover:opacity-50">
            <img class="w-7 h-7" src="/github-icon.svg" alt="github icon" />
          </a>
        </li>
      </ul>
    </section>
    <div class="px-4 sm:px-6 lg:row-span-2 lg:px-8">
      <form class="contact-form row text-white" action="https://formsubmit.co/cortinezmayra89@gmail.com" method="POST">
        <div class="form-field col x-50">
          <input id="name" class="input-text js-input" type="text">
          <label class="label" for="name">Nombre</label>
        </div>
        <div class="form-field col x-50">
          <input id="email" class="input-text js-input" type="email">
          <label class="label" for="email">E-mail</label>
        </div>
        <div class="form-field col x-100">
          <input id="message" class="input-text js-input" type="text">
          <label class="label" for="message">Mensaje</label>
        </div>
        <div class="form-field mx-auto flex col x-100 align-center">
          <button class="lg:w-2/4 mx-auto justify-center submit-btn shadow-custom-orange hover:bg-orange-500 hover:shadow-none hover:text-white" type="submit" value="Submit">
            Enviar
          </button>
        </div>
      </form>
    </div>
  <div id="contact" class="my-32 pt-16 border-orange-500">
    <div class="">
      <p class="flex text-xs text-gray-500 m-auto items-end justify-center self-end pt-24">
        2024 - Cortinez Mayra - Desarrolladora Web.
      </p>
    </div>
  </div>
</footer>
