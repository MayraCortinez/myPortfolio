---
import { getCollection } from 'astro:content';
const projects = await getCollection('projects');
---
<div class="">
  <h2 class="text-4xl text-white font-bold my-8 text-center" data-aos="fade-up">Proyectos</h2>

  <ul class="text-white p-3 flex flex-wrap center items-center w-3/4 text-center m-auto flex-col md:flex-row  gap-4 justify-center ">
    {projects.map(project => (
      <li class="md:w-1/2 lg:w-1/3">
        <a class="p-2 rounded-2xl" href={`/projects/${project.slug}`}>
       
        <div class="bg-black rounded-lg border border-orange-500 p-4 shadow-sm shadow-orange-500/20 hover:scale-y-105 ease-in-out transition:500 ">
    <!-- Imagen -->
    <img
      src={project.data.img.url}
      alt={project.data.img.alt}
      class="w-full h-auto rounded-lg mb-4 bg-gradient-to-t from-transparent to-orange-500"
    />
  
    <!-- TÃ­tulo -->
    <h2 class="text-white text-xl">{project.data.title}</h2>
  </div>
        </a>
      </li>
    ))}
  </ul>  
</div>
