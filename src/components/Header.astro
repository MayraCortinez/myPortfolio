---
// src/pages/index.astro

const currentPath = Astro.url.pathname;

const logoPath = '/code.png';
---

<html>
  <head>
    <title>Mi Portafolio</title>
  </head>
  <body>
    <header class="header bg-gradient-to-b from-black to-transparent text-sm md:text-base lg:text-lg sticky top-0 z-50">
      <section class="container mx-auto flex justify-evenly items-center">
        <a href="/index2" class="w-1/3 flex items-center space-x-2">
          <img src={logoPath} alt="Logo" class="h-8 w-auto" />
          <h1 class="hidden md:block text-gradient-to-r from-red-500 to-orange-500 text-xl hover:text-orange-400">Cortinez Mayra</h1>
        </a>
        <ul class="flex flex-row items-center justify-end gap-4">
          <li class="custom-btn btn-7">
            <a href="/projects" class={`btn-7 ${currentPath === '/projects' ? 'active' : ''}`}>
              <button class="text-white/70">Proyectos</button>
            </a>
          </li>
          <li class="custom-btn btn-7">
            <a href="/" class={`btn-7 ${currentPath === '/' ? 'active' : ''}`}>
              <button class="text-white/70">Sobre m√≠</button>
            </a>
          </li>
          <li class="custom-btn btn-7">
            <a href="#contact" class={`btn-7 ${currentPath === '/contact' ? 'active' : ''}`}>
              <button class="text-white/70">Contacto</button>
            </a>
          </li>
        </ul>
      </section>
    </header>
  </body>
</html>
