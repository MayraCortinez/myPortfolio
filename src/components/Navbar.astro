---
import ProjectList from "./ProjectList.astro";
---
    <style>
      @media (max-width: 768px) {
        .md\:hidden {
          display: block;
        }
        .md\:flex {
          display: none;
        }
      }
    </style>
  <body>
    <nav class="bg-gray-800 text-white p-4">
      <div class="container mx-auto flex justify-between items-center">
        <div class="md:hidden">
          <button id="menu-button" class="focus:outline-none">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
          </button>
        </div>
        <ul class="hidden md:flex md:items-center space-x-4">
          <li><a href="/" class="block mt-4 md:mt-0">Inicio</a></li>
          <li><a href="/about" class="block mt-4 md:mt-0">Sobre mí</a></li>
          <li><a href="/tags" class="block mt-4 md:mt-0">Tecnologías</a></li>
          <li class="relative">
            <button id="projects-button" class="block mt-4 md:mt-0 focus:outline-none">
              Proyectos
            </button>
            <div id="projects-menu" class="hidden absolute mt-2 w-48">
              <ProjectList />
            </div>
          </li>
          <li><a href="/contact" class="block mt-4 md:mt-0">Contacto</a></li>
        </ul>
      </div>
    </nav>

    <script>
      document.getElementById('projects-button').addEventListener('click', () => {
        const menu = document.getElementById('projects-menu');
        menu.classList.toggle('hidden');
      });
    </script>
  </body>




