<form class="bg-white p-6 rounded shadow-md shadow-orange-400/50 max-w-md mx-auto text-orange-600">
    <h1 class="text-center mb-6 text-xl border-2 border-orange-300 text-orange-600 rounded-lg py-2 px-4">Formulario de contacto</h1>
    <label class="block mb-2">
      Nombre
      <input type="text" class="block w-full p-2 border border-orange-300/50 rounded" />
    </label>
    <label class="block mb-2">
      Email
      <input type="email" class="block w-full p-2 border border-orange-300/50 rounded" />
    </label>
    <label class="block mb-4">
      Mensaje
      <textarea class="block w-full p-2 border border-orange-700/50 rounded"></textarea>
    </label>
    <button type="submit" class="border-4 border-orange-300 text-orange-600 py-2 px-4 rounded-lg d-flex justify-self-end hover:bg-orange-500 hover:text-white">Enviar</button>
  </form>
  