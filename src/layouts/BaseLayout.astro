---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Banner from '../components/Banner.jsx';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from "astro:transitions";
const showBanner = Astro.props.showBanner;
const {pageTitle} = Astro.props;

---

<html lang="en" transition:animate="none">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/code.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <ViewTransitions />
  </head>
    <body class="min-h-screen w-full flex flex-col" transition:animate="none">
    <Header/>
    {showBanner && (
      <section class="banner w-full">
        <Banner client:visible/>
      </section>
    )}
    <main class="px-8 w-full lg:px-24 h-full m-auto pb-32 border-b border-orange-500">
      <slot />
    </main>
    <Footer />
      <script is:inline src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"></script>
      <a class="text-green-500 hover:text-green-700 pb-16" href="https://www.websitecarbon.com/website/portfoliocortinezmayra-netlify-app/">This web page achieves a carbon rating of A+</a>
    </body>
</html>
